public class PyramidTriangle {
    public static void main(String[] args) {
        int numRows = 5; // number of rows in the triangle
        int num = 1; // starting number
        for (int i = 1; i <= numRows; i++) {
            for (int j = 1; j <= i; j++) {
                System.out.print(num + " ");
                num++;
            }
            System.out.println();
        }
    }
}
